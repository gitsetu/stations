<form class="box" action="/station/{{station._id}}/addreport" method="POST">
  <label>Enter Weather Report Details: </label>
    <div class="field is-horizontal">
      <div class="field-body">

        <div class="field">
          <label class="label">Weather Code</label>
          <input class="input" type="text" placeholder="Enter weather code" name="weathercode">
        </div>
        <div class="field">
          <label class="label">Temperature</label>
          <input class="input" type="text" placeholder="Enter temperature" name="temperature">
        </div>

      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <label class="label">Wind Speed</label>
          <input class="input" type="text" placeholder="Enter wind speed" name="windspeed">
        </div>
        <div class="field">
          <!--          TODO: wind direction dropdown-->
          <label class="label">Wind Direction</label>
          <input class="input" type="text" placeholder="Enter wind direction" name="winddirection">
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <label class="label">Pressure</label>
          <input class="input" type="text" placeholder="Enter pressure" name="pressure">
        </div>
        <!--        TODO: set date/time and hide field -->
        <div class="field -is-hidden">
          <label class="label">Date/Time</label>
          <input class="input" type="text" placeholder="Enter date and time" name="datetime">
        </div>
      </div>
    </div>

  <div class="field is-grouped">
    <button class="button is-primary">Add Report</button>
  </div>
</form>
