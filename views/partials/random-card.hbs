<div class="columns is-flex is-centered">
  <div class="column">
    <span> </span>
  </div>

  <div class="column is-one-fifth">
  <!-- bulma class tile;    https://github.com/jgthms/bulma/issues/1121  -->
    <!--        reload page link-->
    <!--        https://stackoverflow.com/questions/61851126/how-do-i-refresh-a-page-when-clicking-on-a-href-html-css-->

    <a href="javascript:window.location.reload();">
  <section class="card has-text-centered">
    <!--      <img class="px-6 mb-1" src="https://openweathermap.org/img/wn/10d@2x.png" alt="image">-->

    <article class="card-content">
      <div>
        <p class="heading">{{heading}}</p>
        <p class="title has-text-weight-light {{randomCard.mainClass}}">{{randomCard.main}}</p>
      </div>

      <div class="columns is-flex is-centered">
        <figure class="image -is-96x96">
            <img src="{{randomCard.image}}" width="100" height="100" alt="weather icon"/>
        </figure>
      </div>

      <div class="subtitle has-text-weight-light is-family-sans-serif is-size-6 has-text-grey">
        {{randomCard.subtitle}}
      </div>
    </article>

    <footer class="card-footer is-size-6 mt-auto">
      <p class="card-footer-item {{> class-brand}}">
        {{randomCard.min}}
        <br>
        {{max}}
      </p>


    </footer>
  </section>
    </a>
</div>

  <div class="column">
    <span> </span>
  </div>

</div>

