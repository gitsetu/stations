{{> welcome-menu active="login"}}

<section class="section">
  <h1 class="title {{> class-brand}}">Login</h1>
  <form action="/authenticate" method="POST">
    <div class="field">
      <label class="label">Email / Username</label>
      <input class="input" type="text" placeholder="Enter email" value="pedro" name="email">
    </div>
    <div class="field">
      <label class="label">Password</label>
      <input class="input" type="password" placeholder="Enter Password" value="password" name="password">
    </div>
    <div class="field is-grouped">
      <button class="button is-link">Login</button>
    </div>
  </form>
</section>
